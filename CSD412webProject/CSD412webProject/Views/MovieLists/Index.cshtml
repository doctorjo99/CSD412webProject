@model IEnumerable<CSD412webProject.Models.MovieList>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieListName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieListLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPublic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieListName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieListLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublic)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieListId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovieListId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieListId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
