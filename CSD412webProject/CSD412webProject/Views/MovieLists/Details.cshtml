@model CSD412webProject.Models.MovieList

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.MovieListName</h4>
    <hr />
    <table class="table text-white">
        <thead>
            <tr>
                <th>
                    Movie Name
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {

                <tr>
                    <td>
                        @movie.Title
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="Movies" asp-route-id="@movie.Id">Delete</a> |
                        <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MovieListId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
